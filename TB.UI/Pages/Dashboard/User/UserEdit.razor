@page "/dashboard/users/edit/{Id:int}"
@using TB.UI.Shared.Dashboard
@layout DashboardLayout

<section class="py-4">
    <div class="container">
        <div class="row pb-4">
            <div class="col-12">
                <h1 class="mb-0 h3">ویرایش کاربر</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card border">
                    <div class="card-body">
                        @if (user != null)
                        {
                            <UserForm User="@user" OnSubmit="Edit" SubmitTitle="ذخیره اطلاعات" />
                        }
                        <MudOverlay Visible="@showSpinner" LightBackground="true" Absolute="true">
                            <MudProgressCircular Color="Color.Primary" Size="Size.Small" Indeterminate="true" />
                        </MudOverlay>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>