@page "/dashboard/content/create"
@using TB.UI.Shared.Dashboard
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@layout DashboardLayout

<section class="py-4">
    <div class="container">
        <div class="row pb-4">
            <div class="col-12">
                <h1 class="mb-0 h3">ایجاد مطلب</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card border">
                    <div class="card-body">
                        <ContentForm Content="@content" OnSubmit="Create" SubmitTitle="ثبت اطلاعات" />
                        <MudOverlay Visible="@showSpinner" LightBackground="true" Absolute="true">
                            <MudProgressCircular Color="Color.Primary" Size="Size.Small" Indeterminate="true"/>
                        </MudOverlay>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>