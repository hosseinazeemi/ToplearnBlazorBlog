@inject IConfiguration _config

<footer class="bg-dark pt-3">
    <div class="container">
        <div class="row pt-1 pb-1">
            @if (Data?.Setting?.Logo != null)
            {
                <div class="col-md-3">
                    <img width="60" class="rounded" src="@(Path.Combine(_config.GetValue<string>("ApiBaseUrl") , Data.Setting.Logo))" alt="سایت خبری">
                </div>
            }

            @if (Data?.Setting?.Description != null)
            {
                <div class="col-md-5">
                    <p class="text-muted">
                        @Data.Setting.Description
                    </p>
                </div>
            }

            <div class="col-md-4">
                <form class="row row-cols-lg-auto g-2 align-items-center justify-content-end">
                    <div class="col-12">
                        <input type="email" class="form-control" placeholder="ایمیل">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary m-0">عضویت</button>
                    </div>
                    <div class="form-text mt-2">
                        با عضویت در خبرنامه
                        <a href="#" class="text-decoration-underline text-reset">شرایط و قوانین</a> را خواهید پذیرفت.
                    </div>
                </form>
            </div>
        </div>
        <hr>

        <div class="row pt-2">
            @if (Data?.News != null && Data.News.Any())
            {
                <div class="col-md-6 col-lg-4 mb-0">
                    <h5 class="mb-4 text-white">اخبار اخیر</h5>
                    @foreach (var item in Data.News.Take(2).ToList())
                    {
                        <div class="mb-4 position-relative">
                            <div><a href="#" class="badge text-bg-danger mb-2"><i class="fas fa-circle me-2 small fw-bold"></i>اقتصاد</a></div>
                            <a href="post-single-3.html" class="btn-link text-white fw-normal">تقویم آزمون‌های علوم پزشکی</a>
                            <ul class="nav nav-divider align-items-center small mt-2 text-muted">
                                <li class="nav-item position-relative">
                                    <div class="nav-link">
                                        با <a href="#" class="stretched-link text-reset btn-link">نازنین لطفی</a>
                                    </div>
                                </li>
                                <li class="nav-item">6 مهر، 1400</li>
                            </ul>
                        </div>
                    }
                </div>
            }

            <div class="col-md-6 col-lg-4 mb-0">
                <h5 class="mb-4 text-white">لینک های مفید</h5>
                <div class="row">
                    <div class="col-6">
                        <ul class="nav flex-column text-primary-hover">
                            <li class="nav-item"><a class="nav-link pt-0" href="/news">آخرین اخبار</a></li>
                            <li class="nav-item"><a class="nav-link" href="/blogs">آخرین مقالات</a></li>
                            <li class="nav-item"><a class="nav-link" href="/contact">پشتیبانی</a></li>
                            <li class="nav-item"><a class="nav-link" href="/news/search?filter=likes">اخبار محبوب</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-4 mb-0">
                <h5 class="mb-4 text-white">شبکه های اجتمایی</h5>
                <ul class="nav flex-column text-primary-hover">
                    @if (Data?.Setting?.Whatsapp != null)
                    {
                        <li class="nav-item"><a class="nav-link pt-0" href="@Data.Setting.Whatsapp"><i class="fab fa-whatsapp fa-fw me-2"></i>واتساپ</a></li>

                    }
                    @if (Data?.Setting?.Instagram != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Data.Setting.Instagram"><i class="fab fa-instagram fa-fw me-2"></i>اینستاگرام</a></li>

                    }
                    @if (Data?.Setting?.Telegram != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Data.Setting.Telegram"><i class="fab fa-telegram fa-fw me-2"></i>تلگرام</a></li>

                    }
                    @if (Data?.Setting?.Twitter != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Data.Setting.Twitter"><i class="fab fa-twitter fa-fw me-2"></i>توئیتر</a></li>

                    }
                    @if (Data?.Setting?.Youtube != null)
                    {
                        <li class="nav-item"><a class="nav-link" href="@Data.Setting.Youtube"><i class="fab fa-youtube fa-fw me-2"></i>یوتیوب</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="bg-dark-overlay-3 mt-0">
        <div class="container">
            <div class="row align-items-center justify-content-md-between py-4">
                <div class="col-md-6">
                    <div class="text-center text-md-start text-primary-hover text-muted">
                        ©2022 ارائه شده در سایت <a href="https://www.toplearn.com/" class="text-reset btn-link" target="_blank">تاپ لرن</a>
                    </div>
                </div>
                <div class="col-md-6 d-sm-flex align-items-center justify-content-center justify-content-md-end">
                    <ul class="nav text-primary-hover text-center text-sm-end justify-content-center justify-content-center mt-3 mt-md-0">
                        <li class="nav-item"><a class="nav-link" href="/rule">شرایط و قوانین</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>

<div class="back-top"><i class="bi bi-arrow-up-short"></i></div>